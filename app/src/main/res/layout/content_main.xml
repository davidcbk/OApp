<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cubikosolutions.dampgl.ejemplopcpartes.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCrear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Crear parte entrega material"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="291dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:background="@color/colorVerde"
            android:textColor="@color/colorBlanco"/>

        <Button
            android:id="@+id/btnRellenar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorgris2"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="Crear incidencia / parte"
            android:textColor="@color/colorBlanco"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="356dp" />



    </LinearLayout>
</RelativeLayout>
